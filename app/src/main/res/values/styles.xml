<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppParallax" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
    </style>

    <style name="ToolbarParallaxTitle" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Card" />

    <style name="Card.Text">
        <item name="android:fontFamily">@font/app_font</item>
    </style>

    <style name="Card.Text.Title" parent="Card.Text">
        <item name="autoSizeMinTextSize">13sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">16sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/app_font_bold</item>
    </style>

    <style name="Card.Text.SubTitle" parent="Card.Text">
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/app_font_bold</item>
    </style>

    <style name="Card.Text.Description" parent="Card.Text">
        <item name="autoSizeMinTextSize">12sp</item>
        <item name="autoSizeTextType">uniform</item>
        <item name="autoSizeMaxTextSize">14sp</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="Card.Image" />

    <style name="Card.Image.Circle" parent="Card.Image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>
